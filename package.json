{
    "name": "poo-of-shame",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --hot src/index.tsx",
        "start": "NODE_ENV=production bun src/index.tsx",
        "build": "bun run build.ts",
        "convex": "convex dev",
        "prepare": "husky",
        "fix:staged": "lint-staged",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix",
        "format": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
        "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
        "fix": "bun run lint:fix && bun run format:fix"
    },
    "dependencies": {
        "@clerk/clerk-react": "^5.60.1",
        "@phosphor-icons/react": "^2.1.10",
        "@tanstack/react-query": "^5.90.21",
        "@tanstack/react-router": "^1.160.0",
        "bun-plugin-tailwind": "^0.1.2",
        "clsx": "^2.1.1",
        "convex": "^1.31.7",
        "cva": "^1.0.0-beta.4",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-error-boundary": "^6.1.1",
        "tailwind-merge": "^3.4.1",
        "tailwindcss": "^4.1.18"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^6.0.2",
        "@types/bun": "latest",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "oxlint": "^1.48.0",
        "prettier": "^3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "oxlint --fix",
        "*.{js,jsx,ts,tsx,css,md,json}": "prettier --write"
    }
}
