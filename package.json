{
    "name": "poo-of-shame",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --hot src/app/index.html",
        "build": "bun build src/app/index.html --outdir dist",
        "lint": "oxlint",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "typecheck": "bun run tsc --noEmit",
        "prepare": "husky",
        "proxy": "bun proxy.ts",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:ci": "sh -c 'if find src -type f -name \"*.test.*\" | grep -q .; then bun test; else echo \"No tests found, skipping bun test\"; fi'"
    },
    "dependencies": {
        "@phosphor-icons/react": "^2.1.10",
        "@tanstack/react-query": "^5.90.5",
        "@tanstack/react-router": "^1.133.13",
        "bun-plugin-tailwind": "^0.1.2",
        "cva": "^1.0.0-beta.4",
        "react": "^19",
        "react-dom": "^19",
        "react-error-boundary": "^6.0.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/bun": "1.3.0",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "husky": "^9.1.7",
        "oxlint": "^1.23.0",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1"
    }
}
