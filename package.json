{
    "name": "poo-of-shame",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --hot src/app/entryServer.tsx",
        "start": "NODE_ENV=production bun src/app/entryServer.tsx",
        "build": "bun build src/app/index.html --outdir dist",
        "lint": "oxlint",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "typecheck": "bun run tsc --noEmit",
        "prepare": "husky",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:ci": "sh -c 'if find src -type f -name \"*.test.*\" | grep -q .; then bun test; else echo \"No tests found, skipping bun test\"; fi'"
    },
    "dependencies": {
        "@tanstack/react-router": "^1.132.37",
        "@tanstack/router-devtools": "^1.132.37",
        "bun-plugin-tailwind": "^0.0.15",
        "react": "^19",
        "react-dom": "^19",
        "tailwindcss": "^4.1.11"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/bun": "latest",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "husky": "^9.1.7",
        "oxlint": "^1.19.0",
        "prettier": "3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14"
    }
}
